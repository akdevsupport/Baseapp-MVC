@model Baseapp.Models.ConnectionSettings
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Printer Connection Settings</h2>

@if (TempData["msg"] != null)
{
    <p style="color:green">@TempData["msg"]</p>
}

<form method="post">
    <label>IP Address:</label>
    <input type="text" name="IP" value="@Model.IP" class="form-control" />

    <label class="mt-2">Port:</label>
    <input type="number" name="Port" value="@Model.Port" class="form-control" />

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
